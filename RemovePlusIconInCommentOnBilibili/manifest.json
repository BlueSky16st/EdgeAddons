{
  "name": "__MSG_extName__",
  "version": "1.0",
  "manifest_version": 3,
  "default_locale": "zh_CN",

  "description": "在B站看剧的时候突然就出现一个点赞的弹幕飘过, 影响了你的观影体验? 那就试试这个吧!(把弹幕以最原始的形态呈现, 不要花里胡哨!!!)",
  "action": {
    "default_icon": "imgs/plus48.png"
  },

  "author": "Hsin",

  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://*.bilibili.com/*"],
      "js": ["src/rm.js"]
    }
  ]
}
